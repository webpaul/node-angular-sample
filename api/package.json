{
  "name": "node-angular-sample-api",
  "version": "0.1.0",
  "description": "Node Angular sample app API",
  "engines": {
    "node": "8.9.1"
  },
  "main": "config/index.js",
  "scripts": {
    "start": "nodemon --exec ts-node config/index.ts",
    "test": "standard --fix && mocha --recursive **/*.sspec.js",
    "test-unit": "cd api && mocha --recursive **/*.sspec.js",
    "test-debug": "cd api && mocha --recursive **/*.sspec.js --inspect --debug-brk",
    "test-coverage": "cd api && nyc mocha --recursive **/*.sspec.js"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "dependencies": {
    "body-parser": "^1.16.1",
    "express": "^4.13.3",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.24",
    "ts-node": "^5.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.11.1",
    "@types/mongodb": "^3.0.5",
    "chai": "*",
    "co-mocha": "^1.2.1",
    "fs": "0.0.1-security",
    "mocha": "*",
    "node-mocks-http": "^1.6.6",
    "nodemon": "^1.14.11",
    "nyc": "^11.3.0",
    "sinon": "^4.1.2",
    "sinon-chai": "^2.14.0",
    "standard": "*",
    "typescript": "^2.7.1"
  }
}
