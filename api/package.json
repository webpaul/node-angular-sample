{
  "name": "node-angular-sample-api",
  "version": "0.1.0",
  "description": "Node Angular sample app API",
  "engines": {
    "node": "8.9.1"
  },
  "main": "config/index.js",
  "scripts": {
    "start": "nodemon --exec ts-node config/index.ts",
    "test": "mocha -r ts-node/register **/*.sspec.ts",
    "test-debug": "mocha -r ts-node/register **/*.sspec.ts --inspect --debug-brk",
    "test-coverage": "nyc mocha -r ts-node/register **/*.sspec.ts"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "dependencies": {
    "body-parser": "^1.16.1",
    "express": "^4.13.3",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.24",
    "ts-node": "^5.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/mocha": "^2.2.48",
    "@types/mongodb": "^3.0.5",
    "@types/sinon": "^4.1.3",
    "@types/sinon-chai": "^2.7.29",
    "chai": "*",
    "co-mocha": "^1.2.1",
    "fs": "0.0.1-security",
    "mocha": "*",
    "node-mocks-http": "^1.6.6",
    "nodemon": "^1.14.11",
    "nyc": "^11.3.0",
    "sinon": "^4.1.2",
    "sinon-chai": "^2.14.0",
    "standard": "*",
    "typescript": "^2.7.1"
  }
}
